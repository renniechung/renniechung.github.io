            }
        }

        @keyframes ballHitGround {
            0% { 
                top: 85%; 
                left: 50%;
                opacity: 1;
                transform: translate(-50%, -50%) scale(0.9);
            }
            50% { 
                top: 70%; 
                left: 75%;
                transform: translate(-50%, -50%) scale(1);
            }
            100% { 
                top: 80%; 
                left: 100%;
                opacity: 0;
                transform: translate(-50%, -50%) scale(0.7);
            }
        }

        .scoreboard {
