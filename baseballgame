<body>
    <div class="game-container">
        <div class="inning-display">9局上半</div>
        
        <h1>⚾ 1931年第17回<br>夏季甲子園</h1>
        <div class="subtitle">嘉農 VS 中京商業 - 決勝時刻</div>
        
        <div class="baseball-field">
            <div class="diamond"></div>
            <div class="pitcher-mound"></div>
            <div class="batter-box"></div>
            <div class="pitcher" id="pitcher"></div>
            <div class="batter" id="batter"></div>
            <div class="game-ball" id="gameBall"></div>
        </div>
        
        <div class="result" id="result">
            <div style="color: #8B0000; font-weight: bold;">
                九局上半，兩出局，滿壘...
            </div>
            <div style="color: #654321; font-size: 1.2em; margin-top: 10px;">
                這是嘉農最後的機會！
            </div>
        </div>

        <div class="scoreboard">
            <div class="score-item">
                <div class="score-label">嘉農</div>
                <div class="score-value">0</div>
            </div>
            <div class="score-item">
                <div class="score-label">中京商</div>
                <div class="score-value">4</div>
            </div>
            <div class="score-item">
                <div class="score-label">出局數</div>
                <div class="score-value">2</div>
            </div>
        </div>

        <div class="controls">
            <button class="btn" onclick="finalSwing()" id="swingBtn">🏏 最後一擊</button>
        </div>

        <div class="game-stats" style="display: none;" id="gameStats">
            <div style="text-align: center;">
                這是嘉農在甲子園的最後機會...
            </div>
        </div>
    </div>

    <script>
        (function() {
            'use strict';
            
            let gameEnded = false;

            const outTypes = [
                { text: '😞 三振出局...', animation: '' },
                { text: '😔 飛球被接殺...', animation: 'hit-fly' },
                { text: '💔 滾地球出局...', animation: 'hit-ground' }
            ];

            function safeGetElement(id) {
                try {
                    return document.getElementById(id);
                } catch (e) {
                    return null;
                }
            }

            function safeSetContent(element, content) {
                if (element && typeof content === 'string') {
                    try {
                        element.innerHTML = content;
                        return true;
                    } catch (e) {
                        try {
                            element.textContent = content.replace(/<[^>]*>/g, '');
                            return true;
                        } catch (e2) {
                            return false;
                        }
                    }
                }
                return false;
            }

            function safeAddClass(element, className) {
                if (element && element.classList && typeof className === 'string') {
                    try {
                        element.classList.add(className);
                        return true;
                    } catch (e) {
                        return false;
                    }
                }
                return false;
            }

            function safeRemoveClass(element, className) {
                if (element && element.classList && typeof className === 'string') {
                    try {
                        element.classList.remove(className);
                        return true;
                    } catch (e) {
                        return false;
                    }
                }
                return false;
            }

            function finalSwing() {
                if (gameEnded) return false;
                
                const elements = {
                    pitcher: safeGetElement('pitcher'),
                    batter: safeGetElement('batter'),
                    gameBall: safeGetElement('gameBall'),
                    result: safeGetElement('result'),
                    swingBtn: safeGetElement('swingBtn'),
                    gameStats: safeGetElement('gameStats')
                };
                
                const requiredElements = ['pitcher', 'batter', 'gameBall', 'result', 'swingBtn'];
                for (let key of requiredElements) {
                    if (!elements[key]) {
                        return false;
                    }
                }
                
                elements.swingBtn.disabled = true;
                elements.swingBtn.style.opacity = '0.5';
                
                safeAddClass(elements.pitcher, 'throwing');
                safeAddClass(elements.gameBall, 'pitching');
                
                setTimeout(function() {
                    safeAddClass(elements.batter, 'swinging');
                    
                    gameEnded = true;
                    
                    const selectedOut = outTypes[Math.floor(Math.random() * outTypes.length)];
                    
                    if (selectedOut.animation) {
                        elements.gameBall.className = 'game-ball ' + selectedOut.animation;
                    } else {
                        if (elements.gameBall.style) {
                            elements.gameBall.style.opacity = '1';
                        }
                    }
                    
                    safeSetContent(elements.result, selectedOut.text);
                    elements.result.className = 'result miss';
                    
                    setTimeout(function() {
                        const endMessage = `
                            <div style="font-size: 1.2em; color: #8B0000; margin-bottom: 10px;">
                                比賽結束！中京商業 4:0 獲勝
                            </div>
                            <div style="font-size: 1em; color: #654321;">
                                雖然敗北，但嘉農的野球精神永遠不滅！<br>
                                這是台灣野球史上最光榮的一戰！
                            </div>
                        `;
                        safeSetContent(elements.result, endMessage);
                        
                        if (elements.gameStats) {
                            elements.gameStats.style.display = 'block';
                            const statsMessage = `
                                <div style="text-align: center; color: #8B4513; font-weight: bold;">
                                    <p>📜 歷史時刻 📜</p>
                                    <p>1931年夏季甲子園決賽</p>
                                    <p>嘉義農林學校創造了台灣野球傳奇</p>
                                </div>
                            `;
                            safeSetContent(elements.gameStats, statsMessage);
                        }
                    }, 2000);
                    
                }, 600);
                
                setTimeout(function() {
                    safeRemoveClass(elements.pitcher, 'throwing');
                    safeRemoveClass(elements.batter, 'swinging');
                    
                    const currentOut = outTypes[Math.floor(Math.random() * outTypes.length)];
                    if (!currentOut.animation) {
                        elements.gameBall.className = 'game-ball';
                        if (elements.gameBall.style) {
                            elements.gameBall.style.opacity = '0';
                        }
                    }
                }, 3000);
                
                return true;
            }

            window.finalSwing = finalSwing;

            document.addEventListener('keydown', function(event) {
                if (event && event.code === 'Space' && !gameEnded) {
                    try {
                        event.preventDefault();
                        finalSwing();
                    } catch (e) {
                        // 靜默處理錯誤
                    }
                }
            });

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    // DOM 已載入完成
                });
            }
        })();
    </script>
</body>
</html>
